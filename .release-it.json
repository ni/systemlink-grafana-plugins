{
  "git": {
    "commitMessage": "chore: release v${version}"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "assets": ["${name}-${version}.zip"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  },
  "hooks": {
    "after:bump": "npm run build",
    "before:release": "mv dist ${name} && zip -r ${name}-${version}.zip ${name}"
  }
}